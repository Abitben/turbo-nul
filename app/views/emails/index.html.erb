<h1>Emails#index</h1>
<p>Find me in app/views/emails/index.html.erb</p>

<div class="container mail-container border">
  <div class="mail-headers row border d-flex p-3">
    <h4>THPmail</h4>
    <%= button_to "Recevoir un email", { action: "create" }, class: "btn btn-primary" %>
    <%= link_to "Refresh Emails", emails_path, class: "btn btn-primary" %>
  </div>
  <div class="mail-content row">
    <div class="mail-list">
      <turbo-frame id='email_turbo'>
        <ul>
          <% @emails.each do |email|%>
            <%= render partial: 'emailsindex', locals: { email: email } %>
          <%end%>
        </ul>
      </div>
      <div class="border" id="mail-display">
      </div>
    </turbo-frame>
  </div>
